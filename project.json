{
  "name": "@sps/source",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "force-stop-registry": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "pkill -f verdaccio"
          }
        ]
      }
    }
  }
}
