HOST=0.0.0.0
PORT=1337
NODE_ENV=production

JWT_SECRET={{ JWT_SECRET }}
ADMIN_JWT_SECRET={{ ADMIN_JWT_SECRET }}
APP_KEYS={{ APP_KEYS }}
API_TOKEN_SALT={{ API_TOKEN_SALT }}

DATABASE_CLIENT=postgres
DATABASE_PORT=5432
DATABASE_HOST=postgres
DATABASE_NAME={{ DATABASE_NAME }}
DATABASE_USERNAME={{ DATABASE_USERNAME }}
DATABASE_PASSWORD={{ DATABASE_PASSWORD }}

SET_PERMISSIONS=true

EMAIL_PROVIDER=amazon-ses
AWS_SES_ACCESS_KEY={{ AWS_ACCESS_KEY }}
AWS_SES_SECRET_ACCESS_KEY={{ AWS_SECRET_ACCESS_KEY }}
AWS_SES_URL=https://email.eu-central-1.amazonaws.com
AWS_SES_DEFAULT_FROM=no-reply-{{ PROJECT_NAME }}@mail.singlepagestartup.com
AWS_SES_DEFAULT_REPLY_TO=contact@{{ DOMAIN }}

AWS_S3_ACCESS_KEY={{ AWS_ACCESS_KEY }}
AWS_S3_SECRET_ACCESS_KEY={{ AWS_SECRET_ACCESS_KEY }}
AWS_S3_BUCKET={{ PROJECT_NAME }}
AWS_S3_REGION={{ AWS_S3_REGION }}
AWS_S3_ENDPOINT=https://s3.amazonaws.com/{{ PROJECT_NAME }}

{% if SENTRY_DSN %}
SENTRY_DSN={{ SENTRY_DSN }}
{% endif %}

{% if AVOID_DATABASE_SEEDING != "" %}
SEED_ENTITES=true
{% endif %}