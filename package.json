{
  "name": "sps-lite",
  "scripts": {
    "prepare": "husky install",
    "test": "jest && npm run test:bdd",
    "test:unit": "jest --watch",
    "test:bdd": "PWVIDEO=true ./node_modules/.bin/cucumber-js ./bdd/**/*.feature",
    "test:bdd:only": "BDD_CUCUMBER_PRETTY=true PWVIDEO=true ./node_modules/.bin/cucumber-js $1",
    "test:bdd:trace": "playwright show-trace $1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.10",
    "allure-cucumberjs": "^2.9.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lerna": "^6.6.1"
  },
  "dependencies": {
    "@synthetixio/synpress": "^3.7.2-beta.9",
    "@types/cypress": "^1.1.3",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "ramda": "^0.29.1"
  }
}
