{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@sps/sps-billing": ["libs/plugins/sps-billing/dist/server"],
      "~abi/*": ["apps/frontend/src/web3/configs/abi/*"],
      "~api/*": ["apps/frontend/src/api/*"],
      "~backend/*": ["apps/frontend/src/redux/services/backend/*"],
      "~components/*": ["apps/frontend/src/components/*"],
      "~hooks/*": ["apps/frontend/src/hooks/*"],
      "~mocks/*": ["apps/frontend/src/mocks/*"],
      "~redux/*": ["apps/frontend/src/redux/*"],
      "~store/*": ["apps/frontend/src/store/*"],
      "~transformers/*": ["apps/frontend/src/utils/transformers/*"],
      "~translations/*": ["apps/frontend/translations/*"],
      "~ui/*": ["apps/frontend/src/components/ui/*"],
      "~utils/*": ["apps/frontend/src/utils/*"],
      "~web3/*": ["apps/frontend/src/web3/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
