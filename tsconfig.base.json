{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@sps/api-frontend": ["libs/modules/api/frontend/src/index.ts"],
      "@sps/api-frontend/*": ["libs/modules/api/frontend/src/*"],
      "@sps/hooks": ["libs/shared/hooks/src/index.ts"],
      "@sps/shadcn": ["libs/shared/ui/shadcn/src/index.ts"],
      "@sps/shadcn/server": ["libs/shared/ui/shadcn/src/server.ts"],
      "@sps/sps-billing-frontend": [
        "libs/modules/sps-billing/frontend/src/index.ts"
      ],
      "@sps/sps-billing-frontend/*": [
        "libs/modules/sps-billing/frontend/src/*"
      ],
      "@sps/sps-crm-frontend": ["libs/modules/sps-crm/frontend/src/index.ts"],
      "@sps/sps-crm-frontend/*": ["libs/modules/sps-crm/frontend/src/*"],
      "@sps/sps-ecommerce-frontend": [
        "libs/modules/sps-ecommerce/frontend/src/index.ts"
      ],
      "@sps/sps-ecommerce-frontend/*": [
        "libs/modules/sps-ecommerce/frontend/src/*"
      ],
      "@sps/sps-file-storage-frontend": [
        "libs/modules/sps-file-storage/frontend/src/index.ts"
      ],
      "@sps/sps-file-storage-frontend/*": [
        "libs/modules/sps-file-storage/frontend/src/*"
      ],
      "@sps/sps-rbac-frontend": ["libs/modules/sps-rbac/frontend/src/index.ts"],
      "@sps/sps-rbac-frontend/*": ["libs/modules/sps-rbac/frontend/src/*"],
      "@sps/sps-subscription-frontend": [
        "libs/modules/sps-subscription/frontend/src/index.ts"
      ],
      "@sps/sps-subscription-frontend/*": [
        "libs/modules/sps-subscription/frontend/src/*"
      ],
      "@sps/sps-website-builder-frontend": [
        "libs/modules/sps-website-builder/frontend/src/index.ts"
      ],
      "@sps/sps-website-builder-frontend/*": [
        "libs/modules/sps-website-builder/frontend/src/*"
      ],
      "@sps/ui": ["libs/shared/ui/adapter/src/index.ts"],
      "@sps/ui/server": ["libs/shared/ui/adapter/src/server.ts"],
      "@sps/utils": ["libs/shared/utils/src/index.ts"],
      "~abi/*": ["apps/frontend/src/web3/configs/abi/*"],
      "~api/*": ["apps/frontend/src/api/*"],
      "~backend/*": ["apps/frontend/src/redux/services/backend/*"],
      "~components/*": ["apps/frontend/src/components/*"],
      "~hooks/*": ["apps/frontend/src/hooks/*"],
      "~mocks/*": ["apps/frontend/src/mocks/*"],
      "~redux/*": ["apps/frontend/src/redux/*"],
      "~store/*": ["apps/frontend/src/store/*"],
      "~transformers/*": ["apps/frontend/src/utils/transformers/*"],
      "~translations/*": ["apps/frontend/translations/*"],
      "~ui/*": ["apps/frontend/src/components/ui/*"],
      "~utils/*": ["apps/frontend/src/utils/*"],
      "~web3/*": ["apps/frontend/src/web3/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
